{
	"extends": "tslint:recommended",
	"rules": {
		"indent": [
			true,
			"tabs"
		],
		"max-line-length": {
			"options": [
				120
			]
		},
		"no-var-requires": false,
		"new-parens": true,
		"no-arg": true,
		"forin": false,
		"no-bitwise": true,
		"semicolon": [
			true,
			"never"
		],
		"interface-name": [
			true,
			"never-prefix"
		],
		"quotemark": [
			true,
			"single"
		],
		"no-namespace": false,
		"no-conditional-assignment": true,
		"no-consecutive-blank-lines": false,
		"trailing-comma": [
			true,
			{
				"multiline": {
					"objects": "always",
					"arrays": "always",
					"functions": "always",
					"typeLiterals": "ignore"
				},
				"esSpecCompliant": true
			}
		],
		"no-shadowed-variable": false,
		"space-before-function-paren": false,
		"no-console": false,
		"only-arrow-functions": false,
		"object-literal-sort-keys": false,
		"member-ordering": [
			true,
			{
				"order": "fields-first"
			}
		],
		"no-unused-expression": true
	}
}
